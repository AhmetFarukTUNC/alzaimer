@using Microsoft.AspNetCore.Http
@{
    var username = Context.Session.GetString("Username"); // Session'daki kullanıcı adı
}

<body style="display: flex; flex-direction: column; min-height: 100vh; margin: 0; font-family: Arial, sans-serif;">

    <!-- Main Content -->
    <main style="flex: 1;">

        <!-- Hero Section -->
        <div style="background: linear-gradient(135deg, #4a90e2 0%, #50e3c2 100%);
                    color: white; text-align: center; padding: 100px 20px;">
            <h1 style="font-size: 3rem; font-weight: bold; text-shadow: 2px 2px 8px rgba(0,0,0,0.6); margin-bottom: 20px;">
                Alzheimer Prediction System
            </h1>
            <p style="font-size: 1.3rem; text-shadow: 1px 1px 6px rgba(0,0,0,0.5); margin-bottom: 40px;">
                Early diagnosis powered by AI for a healthier future
            </p>

            @* Predict Now butonu sadece oturum varsa görünür *@
            @if (!string.IsNullOrEmpty(username))
            {
                <a href="/Predict/Index"
                   style="display: inline-block;
                          background: linear-gradient(90deg, #ff6a00, #ee0979);
                          color: white;
                          text-decoration: none;
                          border-radius: 50px;
                          padding: 15px 35px;
                          font-weight: bold;
                          box-shadow: 0 5px 15px rgba(0,0,0,0.3);
                          transition: transform 0.3s;">
                    Predict Now
                </a>
            }
        </div>

        <!-- Features Section -->
        <div style="padding: 80px 20px; text-align: center;">
            <div style="display: flex; justify-content: center; gap: 30px; flex-wrap: wrap;">
                <!-- Feature 1 -->
                <div style="background: white; border-radius: 20px; padding: 30px; width: 280px;
                            box-shadow: 0 8px 20px rgba(0,0,0,0.2); transition: transform 0.3s;">
                    <i class="bi bi-activity" style="font-size: 2.5rem; color: #4a90e2; margin-bottom: 15px;"></i>
                    <h4 style="font-weight: bold; margin-bottom: 10px;">Powerful AI Engine</h4>
                    <p>State-of-the-art deep learning models ensure accurate predictions.</p>
                </div>

                <!-- Feature 2 -->
                <div style="background: white; border-radius: 20px; padding: 30px; width: 280px;
                            box-shadow: 0 8px 20px rgba(0,0,0,0.2); transition: transform 0.3s;">
                    <i class="bi bi-shield-check" style="font-size: 2.5rem; color: #4a90e2; margin-bottom: 15px;"></i>
                    <h4 style="font-weight: bold; margin-bottom: 10px;">Secure Data</h4>
                    <p>Uploaded data is processed anonymously and securely.</p>
                </div>

                <!-- Feature 3 -->
                <div style="background: white; border-radius: 20px; padding: 30px; width: 280px;
                            box-shadow: 0 8px 20px rgba(0,0,0,0.2); transition: transform 0.3s;">
                    <i class="bi bi-speedometer2" style="font-size: 2.5rem; color: #4a90e2; margin-bottom: 15px;"></i>
                    <h4 style="font-weight: bold; margin-bottom: 10px;">Fast Results</h4>
                    <p>Receive predictions and reports within seconds.</p>
                </div>
            </div>
        </div>

    </main>

    

    <!-- Hover Effects -->
    <style>
        a:hover {
            transform: scale(1.05) translateY(-3px);
        }

        div[style*="box-shadow"]:hover {
            transform: translateY(-10px);
        }
    </style>

    <!-- Bootstrap Icons CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
</body>
