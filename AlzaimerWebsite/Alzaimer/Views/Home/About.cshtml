@{
    ViewBag.Title = "About Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        html, body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: white;
            min-height: 100vh;
        }

        main {
            padding: 40px 20px;
            box-sizing: border-box;
            text-align: center; /* Başlık, açıklama ve listeyi ortala */
        }

        h2 {
            font-size: 2rem;
            margin-bottom: 20px;
            text-shadow: 2px 2px 6px rgba(0,0,0,0.5);
        }

        p {
            font-size: 1.1rem;
            line-height: 1.6;
            margin-bottom: 25px;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        ul {
            list-style: none;
            padding: 0;
            font-size: 1.05rem;
            display: inline-block; /* Listeyi ortalamak için */
            text-align: left; /* Liste işaretleri için sol hizalama */
        }

            ul li {
                margin-bottom: 10px;
                position: relative;
                padding-left: 25px;
            }

                ul li i {
                    position: absolute;
                    left: 0;
                    color: #ffd700;
                }

        footer {
            background: #111;
            color: white;
            text-align: center;
            padding: 20px;
            width: 100%;
        }
    </style>
</head>
<body>

    <main>
        <h2>Who We Are</h2>
        <p>
            The Alzheimer AI team leverages artificial intelligence in healthcare to support early diagnosis. Our mission is to improve the quality of life for patients and their families.
        </p>

        <ul>
            <li><i class="bi bi-check-circle-fill"></i> Expert Data Scientists</li>
            <li><i class="bi bi-check-circle-fill"></i> AI and Deep Learning Engineers</li>
            <li><i class="bi bi-check-circle-fill"></i> Healthcare Consultants</li>
        </ul>
    </main>
    

</body>
</html>
