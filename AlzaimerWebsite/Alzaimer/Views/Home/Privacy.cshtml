@{
    ViewBag.Title = "Privacy Policy";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        /* Genel sayfa ayarları */
        html, body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: white;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 80px 20px;
            text-align: center;
        }

        h2 {
            font-size: 3rem;
            margin-bottom: 25px;
            font-weight: bold;
            text-shadow: 2px 2px 10px rgba(0,0,0,0.5);
        }

        p {
            font-size: 1.3rem;
            line-height: 1.8;
            max-width: 700px;
            margin-bottom: 40px;
        }

        ul {
            list-style: none;
            padding: 0;
            display: inline-block;
            text-align: left;
            font-size: 1.15rem;
        }

            ul li {
                margin-bottom: 15px;
                position: relative;
                padding-left: 30px;
            }

                ul li::before {
                    content: "\f058"; /* Bootstrap Icons check-circle */
                    font-family: "Bootstrap Icons";
                    position: absolute;
                    left: 0;
                    color: #ffd700;
                    font-size: 1.2rem;
                    top: 0;
                }

        footer {
            background: #111;
            color: white;
            text-align: center;
            padding: 20px;
            width: 100%;
            font-size: 0.95rem;
        }

        /* Hover efekti için liste */
        ul li:hover {
            transform: scale(1.05);
            transition: transform 0.2s;
        }
    </style>
</head>
<body>

    <main>
        <h2>Privacy Policy</h2>
        <p>
            We value our users’ data. All uploaded images are processed anonymously and are never shared with third parties. Our AI models use your data solely for prediction purposes.
        </p>
        <ul>
            <li>Data is encrypted and stored securely.</li>
            <li>We do not collect personal user information.</li>
            <li>Analytics are only used for AI predictions.</li>
        </ul>
    </main>

    

</body>
</html>
