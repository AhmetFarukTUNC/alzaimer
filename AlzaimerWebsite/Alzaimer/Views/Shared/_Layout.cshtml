@using Microsoft.AspNetCore.Http
@{
    var username = Context.Session.GetString("Username"); // Session'daki kullanıcı adı
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - AlzheimerApp</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="bg-light shadow-sm mb-4">
        <nav class="navbar navbar-expand-lg navbar-light container">
            <a class="navbar-brand fw-bold" href="/">AlzheimerApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav align-items-center">
                    <li class="nav-item"><a class="nav-link" href="/Home/Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/About">About</a></li>

                    @* Predict ve Results menüleri sadece oturum varsa görünür *@
                    @if (!string.IsNullOrEmpty(username))
                    {
                        <li class="nav-item"><a class="nav-link" href="/Predict/Index">Predict</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Predict/Result">Results</a></li>
                    }

                    <li class="nav-item"><a class="nav-link" href="/Home/Contact">Contact</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Privacy">Privacy</a></li>

                    @if (!string.IsNullOrEmpty(username))
                    {
                        <!-- Kullanıcı giriş yapmışsa -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle btn btn-outline-primary ms-2" href="#" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                @username
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><span class="dropdown-item-text"><strong>Username:</strong> @username</span></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item text-danger" href="/Account/Logout">Logout</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <!-- Oturum yoksa Register/Login -->
                        <li class="nav-item"><a class="btn btn-primary ms-2" href="/Account/Register">Register</a></li>
                        <li class="nav-item"><a class="btn btn-outline-primary ms-2" href="/Account/Login">Login</a></li>
                    }
                </ul>
            </div>
        </nav>
    </header>

    <main class="flex-shrink-0">
        @RenderBody()
    </main>

    

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
